
<%= oac.fields_for :variables do |var| -%>
<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= var.label :jgov_2015_name_and_role, t(:jgov_2015_name_and_role), class: 'control-label' %>
      <%= var.text_field :jgov_2015_name_and_role, { :value => oac.object.variables["jgov_2015_name_and_role"], :class => 'form-control' } %>
    </div>
  </div>
</div>
<% end -%>

<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= oac.label :role, t(:I_will_come_as), class: 'control-label' %>
      <%= oac.check_box :role_participant %> <%=t 'participant' %>&nbsp;&nbsp;
      <%= oac.check_box :role_speaker %> <%=t 'speaker' %>&nbsp;&nbsp;
      <%= oac.check_box :role_team %> <%=t 'team' %>&nbsp;&nbsp;
    </div>
  </div>
</div>


