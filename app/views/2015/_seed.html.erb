
<%= oac.fields_for :variables do |var| -%>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= var.label :seed_2015_offer, t(:seed_2015_offer), class: 'control-label' %>
      <%= var.text_area :seed_2015_offer, { :value => oac.object.variables["seed_2015_offer"], :rows => '4', :class => 'form-control' } %>
    </div>
  </div>
</div>

<% end -%>

<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= oac.label :role, t(:I_will_come_as), class: 'control-label' %>
      <%= oac.check_box :role_participant %> <%=t 'participant' %>&nbsp;&nbsp;
      <%= oac.check_box :role_team %> <%=t 'team' %>&nbsp;&nbsp;
    </div>
  </div>
</div>

