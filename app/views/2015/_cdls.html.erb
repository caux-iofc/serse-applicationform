
<%= oac.fields_for :variables do |var| -%>
<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= f.label :cdls_2015_invited_by, t(:cdls_2015_invited_by), class: 'control-label' %>
      <%= var.text_field :invited_by, { :value => oac.object.variables["invited_by"], :class => 'form-control' } %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= f.label :cdls_2015_name_and_role, t(:cdls_2015_name_and_role), class: 'control-label' %>
      <%= var.text_field :name_and_role, { :value => oac.object.variables["name_and_role"], :class => 'form-control' } %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= f.label :cdls_2015_hopes, t(:cdls_2015_hopes), class: 'control-label' %>
      <%= var.text_field :hopes, { :value => oac.object.variables["hopes"], :class => 'form-control' } %>
    </div>
  </div>
</div>
<% end -%>

<div class="row">
  <div class="col-md-12">
    <div class="form-group required">
      <%= oac.label :role, t(:I_will_come_as), class: 'control-label' %>
      <%= oac.check_box :role_participant %> <%=t 'participant' %>&nbsp;&nbsp;
      <%= oac.check_box :role_speaker %> <%=t 'speaker' %>&nbsp;&nbsp;
      <%= oac.check_box :role_team %> <%=t 'team' %>&nbsp;&nbsp;
    </div>
  </div>
</div>

