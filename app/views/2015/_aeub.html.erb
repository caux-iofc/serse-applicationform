<%=t :aeub_2015_intro_html %>

<%= oac.fields_for :variables do |var| -%>
<p><span class="af_star">*</span><strong><%=t :aeub_2015_name_and_role %></strong><br/>
<%= var.text_field :aeub_2015_name_and_role, :value => oac.object.variables["aeub_2015_name_and_role"], :size => '80' %>
</p>

<%=t :aeub_2015_priority_html %>
<p>
  <table>
     <%= oac.fields_for :online_application_conference_workstreams do |cw| -%>
     <tr>
       <td>
         <span class="af_star">*</span><strong><%=t cw.object.preference %></strong>
         <%= cw.hidden_field :preference, :value => cw.object.preference %>
       </td>
       <td><%= cw.select(:conference_workstream_id, ConferenceWorkstream.with_translations.where('conference_id = ?',oac.object.conference.id).collect {|p| [ p.name, p.id ] }, {:include_blank => t(:choose_one)}) %></td>
     </tr>
     <% end -%>
     <tr>
       <td colspan="2">
         <div id="aeub_2015_first_choice_extra" style="display:none; border-style:solid; border-width:1px; padding:5px;"></div><br/>
         <div id="aeub_2015_second_choice_extra" style="display:none; border-style:solid; border-width:1px; padding:5px;"></div>
      </td>
     </tr>
  </table>
</p>

<p><strong><%=t :aeub_2015_expectations%></strong><br/>
<%= var.text_area :aeub_2015_expectations, :value => oac.object.variables["aeub_2015_expectations"], :cols => '80', :rows => '4' %>
</p>

<p><strong><%=t :aeub_2015_instrument%></strong><br/>
<%= var.text_area :aeub_2015_instrument, :value => oac.object.variables["aeub_2015_instrument"], :cols => '80', :rows => '4' %>
</p>

<p>
<span class="af_star">*</span><strong><%=t :I_will_come_as %></strong><br/>
  <%= oac.check_box :role_participant %><%=t 'participant' %>&nbsp;&nbsp;
  <%= oac.check_box :role_speaker %><%=t 'speaker' %>&nbsp;&nbsp;
  <%= oac.check_box :role_team %><%=t 'team' %>&nbsp;&nbsp;
</p>
<% end -%>


