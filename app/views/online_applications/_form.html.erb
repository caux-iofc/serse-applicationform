        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= render 'conference_fees', :f => f %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <%= render 'remarks', :f => f %>
        </td>
      </tr>
