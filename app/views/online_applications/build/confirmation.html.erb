
<%= render :layout => 'form_application_group' do |f| %>

<div class="col-md-12 text-center">
    <h3><%=t :name_badge %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%=t :badge_explanation %>
  </div>
</div>

<% @application_group.online_applications.each do |online_application| %>
  <%= f.fields_for :online_applications, online_application do |builder| %>
    <%= render 'group_confirmation', :f => builder, :online_application => online_application %>
  <% end %>
<% end -%>

<% end %>
