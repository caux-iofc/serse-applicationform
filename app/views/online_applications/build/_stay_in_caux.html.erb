
  <div class="col-md-12 text-center">
    <h3><%=t :stay_in_caux %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr>
    <%= error_messages_for_object f.object %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group required">
      <div class="radio">
        <label>
          <%= f.radio_button :day_visit, :false %> <%=t :overnight_visitor %>
        </label>
        <label>
          <%= f.radio_button :day_visit, :true %> <%=t :day_visitor %>
        </label>
      </div>
    </div>
    <div class="form-group required">
      <%= f.label :arrival, t(:arrival), class: 'control-label' %> <%=t :approximate_time %><br />
      <%= f.datetime_select :arrival, { :include_blank => :true, :start_year => @earliest_start_year, :end_year => @latest_stop_year, :minute_step => 15 }, { class: 'form-control' } %>
    </div>
    <div class="form-group required">
      <%= f.label :departure, t(:departure), class: 'control-label' %> <%=t :approximate_time %><br />
      <%= f.datetime_select :departure, { :include_blank => :true, :start_year => @earliest_start_year, :end_year => @latest_stop_year, :minute_step => 15 }, { class: 'form-control' } %>
    </div>

    <div class="form-group required">
      <%= f.label :heard_about, t(:heard_about), class: 'control-label' %><br />
      <%= f.select :heard_about, options_for_select(@heard_about, online_application.heard_about), {}, { :class => 'form-control' } %>
    </div>

    <strong><%=t :practical_life %></strong>

  </div>
</div>
