<%= render :layout => 'form' do |f| %>  
  <%= render 'personal_information', :f => f %>
  <%= render 'contact_information', :f => f %>
  <%= render 'permanent_address', :f => f %>
</div>
<div class="row">
  <div class="col-md-12">

    <div class="radio">
      <label>
        <%= f.radio_button :registration_type, :single %> <%=t :register_as_single_person %>
