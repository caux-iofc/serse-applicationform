      <label>
        <%= f.radio_button :registration_type, :family %> <%=t :register_as_part_of_family %>
      </label><br/>
      <label>
        <%= f.radio_button :registration_type, :group %> <%=t :register_as_part_of_group %>
      </label>
    </div>
  </div>
<% end %>
