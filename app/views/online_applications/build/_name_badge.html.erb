
<div class="col-md-12 text-center">
    <h3><%=t :name_badge %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%=t :badge_explanation %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group required">
      <%= f.label :badge_firstname, t(:firstname), class: 'control-label' %>
      <%= f.text_field :badge_firstname, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group required">
      <%= f.label :badge_surname, t(:surname), class: 'control-label' %>
      <%= f.text_field :badge_surname, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group required">
      <%= f.label :badge_country, t(:country), class: 'control-label' %>
      <%= f.text_field :badge_country, class: 'form-control' %>
    </div>
  </div>
</div>
