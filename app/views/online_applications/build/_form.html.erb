
<%= form_for @online_application, url: wizard_path, role: 'form' do |f| %>

<div class="well">

  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-compact">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:<%= @progress_bar_with -%>%">
          <span><%= t(:step) -%> <%= @progress_bar_current_step -%> <%= t(:out_of) -%> <%= @progress_bar_total_steps -%></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= error_messages_for :online_application %>
    </div>
  </div>

  <div class="row">
    <%= yield f %>
  </div>
</div>

<div class="row spacer">
  <% if @step != :personal -%>
    <div class="col-md-3 col-md-offset-2">
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <div class="actions">
            <% if @step == :detail -%>
              <% if @online_application.group_registration -%>
                <%= link_to "Back", previous_wizard_path, class: 'btn btn-info' %>
              <% else -%>
                <%= link_to "Back", wizard_path(:personal), class: 'btn btn-info' %>
              <% end -%>
            <% else -%>
              <%= link_to "Back", previous_wizard_path, class: 'btn btn-info' %>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% elsif @online_application.status == 'complete' -%>
    <div class="col-md-3 col-md-offset-2">
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <div class="actions">
            <%= link_to "Back", build_index_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% else -%>
    <div class="col-md-2 col-md-offset-5">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% end -%>
</div>

<% end -%>
