
<div class="row">
  <div class="col-md-12" align="center">
    <h1><%= t(:title) %></h1>
  </div>
</div>

<%= form_for @online_application, url: wizard_path, role: 'form' do |f| %>

<div class="row">
  <div class="col-md-12">
    <%= error_messages_for :online_application %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
<%=t :intro_part_1_html %>
<%=t :intro_part_1b_html %>
