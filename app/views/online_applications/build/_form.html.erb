
<%= form_for @online_application, url: wizard_path, role: 'form' do |f| %>

<div class="well">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= ((wizard_steps.index(step) + 1)/wizard_steps.size.to_f*100).round -%>%">
          <span align="center"><%= t(:step) -%> <%= wizard_steps.index(step) + 1 -%> <%= t(:out_of) -%> <%= wizard_steps.size -%></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= error_messages_for :online_application %>
    </div>
  </div>

  <div class="row">
    <%= yield f %>
  </div>
</div>

<div class="row spacer">
  <% if @step != :personal -%>
    <div class="col-md-3 col-md-offset-2">
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <div class="actions">
            <%= link_to "Back", previous_wizard_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% elsif @online_application.status == 'complete' -%>
    <div class="col-md-3 col-md-offset-2">
      <div class="row">
        <div class="col-md-5 col-md-offset-7">
          <div class="actions">
            <%= link_to "Back", build_index_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% else -%>
    <div class="col-md-2 col-md-offset-5">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% end -%>
</div>

<% end -%>
