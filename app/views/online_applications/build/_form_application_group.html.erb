
<div class="row">
  <div class="col-md-12 text-center">
    <h1><%= t(:title) %></h1>
  </div>
</div>

<%= form_for @application_group, url: wizard_path, role: 'form' do |f| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:<%= @progress_bar_with -%>%">
        <span><%= t(:step) -%> <%= @progress_bar_current_step -%> <%= t(:out_of) -%> <%= @progress_bar_total_steps -%></span>
      </div>
    </div>
  </div>
</div>

<div class="well">
  <div class="row">
    <div class="col-md-12">
      <% if @application_group.errors.any? -%>
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h4 class="panel-title">
              <%= t(:the_form_could_not_be_saved_because_it_contains) + " #{pluralize(@application_group.errors.count, t(:error))}" + t(:please_scroll_down_for_details) -%>
            </h4>
          </div>
        </div>
      <% end -%>
    </div>
  </div>

  <div class="row">
    <%= yield f %>
  </div>
</div>

<div class="row spacer">
  <% if @step != :personal -%>
    <div class="col-md-2 col-md-offset-4">
      <div class="actions">
        <% if @step == :detail -%>
          <% if @online_application.group_registration -%>
            <%= link_to "Back", previous_wizard_path, class: 'btn btn-info' %>
          <% else -%>
            <%= link_to "Back", wizard_path(:personal), class: 'btn btn-info' %>
          <% end -%>
        <% else -%>
          <%= link_to "Back", previous_wizard_path, class: 'btn btn-info' %>
        <% end -%>
      </div>
    </div>
    <div class="col-md-2">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% elsif @online_application.status == 'complete' -%>
    <div class="col-md-2 col-md-offset-4">
      <div class="actions">
        <%= link_to "Back", build_index_path, class: 'btn btn-info' %>
      </div>
    </div>
    <div class="col-md-2">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% else -%>
    <div class="col-md-2 col-md-offset-5">
      <%= f.submit t(:proceed), class: 'btn btn-default' %>
    </div>
  <% end -%>
</div>

<% end -%>
