
  <div class="col-md-12" align="center">
    <h3><%=t :personal_information %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if @ag.online_applications.count > 0 and @online_application.relation != 'primary applicant' then -%>
      <div class="form-group required">
        <%= f.label :relation, t(:relation), class: 'control-label' %>
        <%= f.select(:relation, [ [t('spouse'),'spouse'], [t('child'),'child'], [t('other'),'other'] ], {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
      </div>
    
      <div class="show_for_children prominent_text">
        <%=t :welcome_children_html %>
      </div>
    <% else -%>
      <%= f.hidden_field :relation, :value => 'primary applicant' %>
    <% end -%>

    <div class="form-group required">
      <%= f.label :firstname, t(:firstname), class: 'control-label' %>
      <%= f.text_field :firstname, :class => 'form-control' %>
    </div>

    <div class="form-group required">
      <%= f.label :surname, t(:surname), class: 'control-label' %>
      <%= f.text_field :surname, :class => 'form-control' %>
    </div>

    <div class="form-group required">
      <%= f.label :date_of_birth, t(:date_of_birth), class: 'control-label' %><br/>
      <%= f.date_select :date_of_birth, { :include_blank => true, :start_year => Time.now.year - 100, :end_year => Time.now.year }, { :class => 'form-control' } %>
    </div>

    <div class="form-group required">
      <%= f.label :gender, t(:gender), class: 'control-label' %><br />
      <%= f.select("gender", [ [t('female'),'1'], [t('male'),'2'] ], {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
    </div>

    <div class="form-group required">
      <%= f.label :citizenship_id, t(:citizenship), class: 'control-label' %><br />
      <%= f.select(:citizenship_id, @countries, {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
    </div>

    <div class="form-group required" id="online_application_other_citizenship_div" style="display: none">
      <%= f.label :other_citizenship, t(:other_citizenship), class: 'control-label' %><br />
      <%= f.text_field :other_citizenship, :class => 'form-control' %>
    </div>

    <div class="form-group hide_for_children">
      <%= f.label :profession, t(:profession), class: 'control-label' %>
      <%= f.text_field :profession, :class => 'form-control' %>
    </div>

    <div class="form-group hide_for_children">
      <%= f.label :employer, t(:employer), class: 'control-label' %><br />
      <%= f.text_field :employer, :class => 'form-control' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group required">
      <%= f.label :language_name, t(:language_name), class: 'control-label' %> / <label><%=t :language_proficiency%></label><br/>
      <%= f.fields_for :online_application_languages do |lf| -%>
        <%= lf.select(:language_id, @languages, {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
        <%= lf.select(:proficiency, @language_proficiencies, {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
      <% end -%>
    </div>
    <div class="form-group required">
      <%= f.label :translation_needed, t(:translation_needed), class: 'control-label' %>
      <div class="row">
        <div class="col-md-3">
          <%= t :english %>:<br/>
          <%= t :french %>:<br/>
          <%= t :german %>:
        </div>
        <div class="col-md-9">
          <%= f.select("translate_english", [["No",false], ["Yes",true]], { :class => 'form-control' }) %><br/>
          <%= f.select("translate_french", [["No",false], ["Yes",true]], { :class => 'form-control' }) %><br/>
          <%= f.select("translate_german", [["No",false], ["Yes",true]], { :class => 'form-control' }) %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :special_dietary_requirements, t(:special_dietary_requirements) %><br />
      <%= t(:diet_detail) %><br />
      <% Diet.with_translations.order(:priority_sort).each do |diet| -%>
        <div <%= diet.name == 'Ramadan' ? 'id="ramadan" style="display: none"'.html_safe : '' -%>>
          <% @old_locale = I18n.locale; I18n.locale = 'en' -%>
          <%= check_box_tag :diet_ids, diet.id, @diets.include?(diet.id), :name => 'online_application[diet_ids][]', :id => "diet_check_#{diet.name.downcase}" %>
          <% I18n.locale = @old_locale -%>
          <%= label_tag :diet_ids, diet.name %> <%= diet.name == 'Ramadan' ? t(:special_meals_at_night) : '' -%>
        </div>
      <% end -%>
      <span name="diet_other_text" id="diet_other_text" style="display: none">
        <%=t 'please_specify' %> <%= f.text_field :diet_other_detail, :size => 60 %><br/>
        <i><%=t 'other_diet_text' %></i>
      </span>
    </div>
  </div>
