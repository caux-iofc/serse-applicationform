
  <div class="col-md-12 text-center">
    <h3><%=t :personal_information %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="col-md-12">
      <% if @ag.online_applications.count > 0 and @online_application.relation != 'primary applicant' then -%>
        <div class="form-group required">
          <%= f.label :relation, t(:relation), class: 'control-label' %>
          <%= f.select(:relation, [ [t('spouse'),'spouse'], [t('child'),'child'], [t('other'),'other'] ], {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
        </div>

        <div class="show_for_children prominent_text">
          <%=t :welcome_children_html %>
        </div>
      <% else -%>
        <%= f.hidden_field :relation, :value => 'primary applicant' %>
      <% end -%>
    </div>

    <div class="col-md-6">
      <div class="form-group required">
        <%= f.label :firstname, t(:firstname), class: 'control-label' %>
        <%= f.text_field :firstname, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group required">
        <%= f.label :surname, t(:surname), class: 'control-label' %>
        <%= f.text_field :surname, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group required">
        <%= f.label :date_of_birth, t(:date_of_birth), class: 'control-label' %><br/>
        <%= f.date_select :date_of_birth, { :include_blank => true, :start_year => Time.now.year - 100, :end_year => Time.now.year }, { :class => 'form-control' } %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group required">
        <%= f.label :gender, t(:gender), class: 'control-label' %><br />
        <%= f.select("gender", [ [t('female'),'1'], [t('male'),'2'] ], {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group required">
        <%= f.label :citizenship_id, t(:citizenship), class: 'control-label' %><br />
        <%= f.select(:citizenship_id, @countries, {:include_blank => t(:choose_one)}, { :class => 'form-control' }) %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group required" id="online_application_other_citizenship_div" style="display: none">
        <%= f.label :other_citizenship, t(:other_citizenship), class: 'control-label' %><br />
        <%= f.text_field :other_citizenship, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group hide_for_children">
        <%= f.label :profession, t(:profession), class: 'control-label' %>
        <%= f.text_field :profession, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group hide_for_children">
        <%= f.label :employer, t(:employer), class: 'control-label' %><br />
        <%= f.text_field :employer, :class => 'form-control' %>
      </div>
    </div>
  </div>
