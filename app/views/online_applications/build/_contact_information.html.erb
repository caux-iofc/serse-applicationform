<div class="col-md-6">
  <div class="col-md-6">
    <div class="form-group required">
      <%= f.label :email, t(:email), class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    
    <div class="form-group required">
      <%= f.label :email_confirmation, t(:email_confirmation), class: 'control-label' %>
      <% if not @online_application.email.nil? and not @online_application.email.empty? -%>
        <%= f.text_field :email_confirmation, { :value => @online_application.email, :class => 'form-control' } %>
      <% else -%>
        <%= f.text_field :email_confirmation, class: 'form-control' %>
      <% end -%>
    </div>
    
    <div class="form-group" id="fax_required">
      <%= f.label :fax, t(:fax ), class: 'control-label' %>
      <%= f.text_field :fax, class: 'form-control' %>
    </div>
  
  </div>
  
  <div class="col-md-6">
    <% if @online_application.relation == 'primary applicant' -%>
      <div class="form-group required">
    <% else -%>
      <div class="form-group">
    <% end -%>
      <%= f.label :telephone, t(:telephone), :class => 'control-label' %>
      <%= f.text_field :telephone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cellphone, t(:cellphone) %>
      <%= f.text_field :cellphone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :work_telephone, t(:work_telephone) %>
      <%= f.text_field :work_telephone, class: 'form-control' %>
    </div>
  </div>
 
</div>

  <div class="col-md-12">
    <div class="show_for_primary_applicant">
      <div class="col-md-12">
        <div class="form-group required">
          <%= f.label :confirmation_letter_via, t(:confirmation_letter_via), class: 'control-label' %>
        </div>
        <div class="form-group required">
          <div class="radio">
          <label>
            <%= f.radio_button :confirmation_letter_via, 'email' %> <%=t :confirmation_letter_via_email %>
          </label>
          <label>
            <%= f.radio_button :confirmation_letter_via, 'post' %> <%=t :confirmation_letter_via_post %>
          </label>
          <label>
            <%= f.radio_button :confirmation_letter_via, 'fax' %> <%=t :confirmation_letter_via_fax %>
          </label>
          <label>
            <%= f.radio_button :confirmation_letter_via, 'correspondence_address' %> <%=t :confirmation_letter_via_correspondence_address %>
          </label>
          </div>
        </div>
      </div>
    </div>
  </div>
