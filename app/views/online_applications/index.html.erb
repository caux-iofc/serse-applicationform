<h1>Your application for Caux</h1>

<table>
  <tr>
    <th></th>
    <th><%=t :firstname %></th>
    <th><%=t :surname %></th>
    <th>Gender</th>
    <th>Arrival</th>
    <th>Departure</th>
  </tr>

<% @online_applications.each do |online_application| %>
  <tr>
    <td><%= online_application.relation %></td>
    <td><%= online_application.firstname %></td>
    <td><%= online_application.surname %></td>
    <td><%= online_application.gender == 1 ? 'Female' : 'Male' %></td>
    <td><%= online_application.arrival.to_s(:pretty) %></td>
    <td><%= online_application.departure.to_s(:pretty) %></td>
    <td><%= link_to 'Edit', edit_online_application_path(online_application) %></td>
    <td><%= link_to 'Remove', online_application, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a person to this application', new_online_application_path %>
