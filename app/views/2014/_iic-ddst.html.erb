<ul>
<table width="100%">
<% oac.object.conference.conference_workstreams.each do |w| -%>
<tr>
   <td align="left">
     <li><strong><%= w.name %></strong>
   </td>
   <td align="right">
     <% if not w.language.nil? and not w.language.empty? then -%>
       <i><%=t w.language %></i>
     <% end -%>
   </td>
</tr>
<% if not w.byline.nil? and not w.byline.empty? then -%>
<tr>
<td colspan="2">&nbsp;&nbsp;<%= w.byline %></td>
</tr>
<% end -%>
<% end -%>
</table>
</ul>
<%= oac.fields_for :variables do |var| -%>
<p><span class="af_star">*</span><strong><%=t :llmw_2014_invited_by %></strong><br/>
<%= var.text_field :invited_by, :value => oac.object.variables["invited_by"] %>
</p>

<p><span class="af_star">*</span><strong><%=t :llmw_2014_interest %></strong><br/>
<%= var.text_area :interest, :value => oac.object.variables["interest"], :cols => '90', :rows => '7' %>
</p>

<p>
  <table>
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr>
      <td colspan="2">
        <span class="af_star">*</span><strong><%=t :I_will_come_as %></strong><br/>
          <%= oac.check_box :role_participant %><%=t 'participant' %>&nbsp;&nbsp;
          <%= oac.check_box :role_speaker %><%=t 'speaker' %>&nbsp;&nbsp;
          <%= oac.check_box :role_team %><%=t 'team' %>&nbsp;&nbsp;
      </td>
    </tr>
  </table>
</p>

<% end -%>

